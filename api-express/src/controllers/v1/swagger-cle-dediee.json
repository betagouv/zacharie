    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Authentification par clé API. Utilisez 'Bearer VOTRE_CLE_API'"
      }
    },
